<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_secondary">

    <TextView
        android:id="@+id/sun_date_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@color/my_primary"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:fontFamily="monospace"
        android:text="Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sun_lng_title"
        tools:text="@tools:sample/date/ddmmyy" />

    <TextView
        android:id="@+id/sun_time_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/my_primary"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:fontFamily="monospace"
        android:text="Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/sun_date_detail_title"
        app:layout_constraintStart_toStartOf="@+id/sun_date_detail_title"
        app:layout_constraintTop_toBottomOf="@+id/sun_date_detail_title" />

    <TextView
        android:id="@+id/sun_sunrise_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="52dp"

        android:text="@string/sunrise_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sun_time_detail_title" />

    <TextView
        android:id="@+id/sun_noon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/solar_noon_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/sun_sunrise_title"
        app:layout_constraintTop_toBottomOf="@+id/sun_sunrise_title" />

    <TextView
        android:id="@+id/sun_golden_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/golden_hour_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/sun_noon_title"
        app:layout_constraintTop_toBottomOf="@+id/sun_noon_title" />

    <TextView
        android:id="@+id/sun_sunset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/sunset_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/sun_golden_title"
        app:layout_constraintTop_toBottomOf="@+id/sun_golden_title" />

    <TextView
        android:id="@+id/sun_timezone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/timezone_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/sun_sunset_title"
        app:layout_constraintTop_toBottomOf="@+id/sun_sunset_title" />


    <TextView
        android:id="@+id/sun_sunrise_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="sunrise"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/sun_sunrise_title"
        app:layout_constraintStart_toEndOf="@+id/sun_sunrise_title"
        app:layout_constraintTop_toTopOf="@+id/sun_sunrise_title" />

    <TextView
        android:id="@+id/sun_noon_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="solar_noon"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/sun_sunrise_detail"
        app:layout_constraintTop_toBottomOf="@+id/sun_sunrise_detail" />

    <TextView
        android:id="@+id/sun_golden_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="golder_hour"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/sun_noon_detail"
        app:layout_constraintTop_toBottomOf="@+id/sun_noon_detail" />

    <TextView
        android:id="@+id/sun_sunset_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="sunset"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/sun_golden_detail"
        app:layout_constraintTop_toBottomOf="@+id/sun_golden_detail" />

    <TextView
        android:id="@+id/sun_timezone_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="timezone"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/sun_sunset_detail"
        app:layout_constraintTop_toBottomOf="@+id/sun_sunset_detail" />

    <TextView
        android:id="@+id/sun_lat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Latitude: "
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintStart_toStartOf="@+id/sun_sunrise_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sun_lat_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80.000088"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="@+id/sun_lat_title"
        app:layout_constraintStart_toEndOf="@+id/sun_lat_title"
        app:layout_constraintTop_toTopOf="@+id/sun_lat_title" />

    <TextView
        android:id="@+id/sun_lng_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Longitude:"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toStartOf="@+id/sun_lng_detail"
        app:layout_constraintTop_toTopOf="@+id/sun_lat_title" />

    <TextView
        android:id="@+id/sun_lng_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="-179.999999"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="@+id/sun_lng_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sun_lng_title" />

    <TextView
        android:id="@+id/sun_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="City Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>